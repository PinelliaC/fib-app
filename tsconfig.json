{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitUseStrict": true,
        "inlineSourceMap": false,
        "allowJs": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationDir": "typings",
        "types": [
            "@fibjs/types"
        ],
        "typeRoots": [
            "typings/index.d.ts"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "typeAcquisition": {
        "exclude": [
            "fib-session",
            "fib-vk"
        ]
    }
}
